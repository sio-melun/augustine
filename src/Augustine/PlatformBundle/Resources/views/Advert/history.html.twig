{% extends "AugustinePlatformBundle::layout.html.twig" %}

{% block title %}
    Historique -{{ parent() }}
{% endblock %}

{% block augustineplatform_body %}

<div id="historique">
        <div class="container">
            <div class="row">
                <div class="box">
                    <div class="col-lg-12 text-center">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Nos évènements passés :</strong> Historique
                        </h2>
                        <hr>
                        <!--<div class="col-md-6">
                            <img class="img-responsive img-border-left" src="{{asset('bundles/augustineplatform/img/slide-2.jpg')}}" alt="">
                        </div>-->
                        <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                            {% for actualite in actualite %}
                                {% if true == actualite.isHisto %}
                                    {% include "AugustinePlatformBundle:Advert:actualite_contenu.html.twig" with { 'voir': false,  'link': true } %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>

                    <div class="clearfix">     
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}