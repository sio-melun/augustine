{# src/Augustine/PlatformBundle/Resources/views/Actualite/history.html.twig #}

{% extends "AugustinePlatformBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Historique
{% endblock %}

{% block augustineplatform_body %}

    <div id="historique">
        <div class="container">
            <div class="row">
                <div class="box">
                    <div class="col-lg-12 text-center">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Nos évènements passés :</strong> Historique
                        </h2>
                        <hr>
                            {% for actualite in actualites %}
                                <div class="col-md-3 text-center">
                                    <a href="{{path('voir', {id : actualite.id})}}"  title='En savoir plus'><img class="img-responsive" src="{{asset('bundles/augustineplatform/img/Challenge/grp.jpg')}}" alt=""></a>
                                    <h3>{{actualite.titre}} <br />
                                        <small>{{actualite.dateCrea|date('d M Y')}}</small>
                                    </h3>
                                    <p>
                                        {{actualite.texte | truncate(255, true, ' ...')}}
                                    </p>
                                </div>
                            {% endfor %}
                    </div>
                    <a href="{{ path('index') }}" class="btn btn-default">Retour à l'acceuil</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}