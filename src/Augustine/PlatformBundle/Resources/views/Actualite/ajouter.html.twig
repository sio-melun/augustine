{# src/Augustine/PlatformBundle/Resources/views/Actualite/ajouter.html.twig #}

{% extends "AugustinePlatformBundle::layout.html.twig" %}

{% block title %}
    Ajouter -{{ parent() }}
{% endblock %}

{% block augustineplatform_body %}
    <div id="ajouter">
        <div class="container">
            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Ajouter une actualité</strong>
                        </h2>
                        <hr>
                        <div class="col-md-6">
                            <img class="img-responsive" src="{{asset('bundles/augustineplatform/img/Challenge/grp.jpg')}}" alt="">
                        </div>
                        <div class="form-group col-md-6" id="accordion" role="tablist" aria-multiselectable="true">
                            <form action="{{ path ('ajouter') }}" method ="post">
                                {{ form_start(form) }}
                                <div class="form-group">
                                    {{ form_row(form.titre, {'attr':{'class':'form-control'}})}}
                                    {{ form_row(form.texte, {'attr':{'class':'form-control'}}) }}
                                    {{ form_row(form.dateActu, {'attr':{'class':'form-control'}}) }}
                                    {{ form_row(form.isHisto,{'label':'Mettre en historique :'} ,{'attr':{'class':'checkbox'}}) }}
                                    {{ form_widget(form,{'attr':{'class':'form-control'}})}}
                                </div>
                            {{ form_end(form) }}
                                <input type="submit" class="btn btn-sucess">
                                <input type="reset" class="btn btn-warning">
                            </form>
                        </div>
                    </div>
                    <a href="{{ path('index') }}" class="btn btn-default">Retour à l'acceuil</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}