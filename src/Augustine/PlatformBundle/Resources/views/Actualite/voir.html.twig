{# src/Augustine/PlatformBundle/Resources/views/Actualite/voir.html.twig #}

{% extends "AugustinePlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil -{{ parent() }}
{% endblock %}

{% block augustineplatform_body %}
    <div class="container">
        <div class="row">
            <div class="box">
                <a href="{{ path("editer", { id : actualite.id }) }}" title="Editer cet article">Modifier</a>
                <a href="{{ path("supprimer", { id : actualite.id }) }}" title="Supprimer cet article">Supprimer</a>
                <div class="admin">
                </div>
                <div class="col-lg-12 text-center">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="col-lg-4 col-lg-offset-4 text-center">
                            <h3>{{actualite.titre}} <br />
                                <small>{{actualite.dateCrea|date('d M Y')}}</small>
                            </h3>
                            <img class="img-responsive" src="{{asset('bundles/augustineplatform/img/Challenge/grp.jpg')}}" alt="">
                        </div>
                        <div class='col-lg-12 text-center'>
                            <p>
                                <br />
                                {{actualite.texte}}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="clearfix">     
                </div>
            </div>
        </div>
    </div>
{%endblock%}

