{# src/Augustine/PlatformBundle/Resources/views/Actualite/voir.html.twig #}

{% extends "layout.html.twig" %}

{% block title %}
    Accueil -{{ parent() }}
{% endblock %}

{% block augustineplatform_body %}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                        <div class="col-sm-12 col-md-12 col-lg-12 text-center">
                            {% if is_granted('ROLE_ADMIN') %}
                                <h2>
                                    <a href="{{ path("editer", { id : actualite.id }) }}" type="button" class="btn btn-warning" title="Modifier cet article">
                                        <span class="glyphicon glyphicon-plus-sign"></span> Modifier un article
                                    </a>
                                    || 
                                    <a href="{{ path("supprimer", { id : actualite.id }) }}" type="button" class="btn btn-danger" title="Supprimer cet article">
                                        <span class="glyphicon glyphicon glyphicon-remove"></span> Supprimer
                                    </a>
                                </h2>
                            {%endif%}
                            <h3>{{actualite.titre}} <br /> <small>{{actualite.dateCrea|date('d M Y')}}</small></h3>
                            <img class="img-responsive col-sm-6 col-md-6 col-lg-offset-3" src="{{asset('bundles/augustineplatform/img/Challenge/grp.jpg')}}" alt="">
                        </div>
                        <div class='col-lg-12 text-center'>
                            <p>
                                <br />
                                {{actualite.texte}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{%endblock%}

